<div class="max-w-2xl mx-auto mt-10 space-y-6">
  <div class="bg-white shadow rounded-xl p-6">
    <h1 class="text-xl font-semibold mb-2">
      <%= @conversation.product.title %>
    </h1>

    <p class="text-gray-700">
      <span class="font-medium">Participants:</span>
      <%= @conversation.participants.map(&:username).join(", ") %>
    </p>
  </div>

  <div class="bg-white shadow rounded-xl p-6 h-80 flex flex-col">
    <div class="flex-1 overflow-y-auto space-y-3 pr-1">
      <% if @messages.any? %>
        <% @messages.each do |message| %>
          <% mine = message.user == current_user %>
          <div class="flex <%= mine ? 'justify-end' : 'justify-start' %>">
            <div class="max-w-xs rounded-2xl px-3 py-2 text-sm
                        <%= mine ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-800' %>">
              <div class="text-xs opacity-80 mb-0.5">
                <%= message.user.username %>
              </div>
              <div><%= message.body %></div>
              <div class="text-[10px] opacity-70 mt-1 text-right">
                <%= message.created_at.strftime("%Y-%m-%d %H:%M") %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 text-sm">
          No messages yet. Start the conversation ðŸ‘‹
        </p>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-xl p-4">
    <h2 class="text-sm font-medium mb-2">

    <%= form_with model: [@conversation, @message], local: true do |f| %>
      <div class="flex gap-2">
        <%= f.text_area :body,
              rows: 2,
              class: "flex-1 rounded-lg border-gray-300 text-sm",
              placeholder: "Write a message..." %>
        <%= f.submit "Send",
              class: "self-end px-4 py-2 rounded-lg bg-blue-600 text-white text-sm font-medium hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to "Back to Conversations",
          conversations_path,
          class: "text-blue-600 hover:underline text-sm" %>
  </div>
</div>
