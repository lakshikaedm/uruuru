<div class="mx-auto max-w-7xl px-4 py-8">
  <% content_for :title, t("favorites.index.title") %>

  <div class="mb-6 flex items-baseline justify-between">
    <h1 class="text-2xl font-semibold"><%= t("favorites.index.heading") %></h1>
    <%= link_to t("favorites.index.back"),
          products_path,
          class: "text-sm underline" %>
  </div>

  <% if @products.any? %>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <%= render "products/shared/card", product: product %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500"><%= t("favorites.index.empty") %></p>
  <% end %>
</div>
