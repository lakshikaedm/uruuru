<%= render "shared/search" %>

<% if params[:q].present? %>
  <h2 class="text-xl font-semibold text-slate-800 my-4">
    Results for "<span class="font-medium"><%= params[:q] %></span>"
  </h2>
<% end %>

<% if @products.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 items-stretch mt-6">
    <%= render partial: "products/shared/card",
              collection: @products,
              as: :product %>
  </div>
<% else %>
  <p class="text-center my-10 text-gray-500">No products found.</p>
<% end %>
