<% content_for :title, t("products.edit.title") %>

<div class="md:w-2/3 w-full space-y-6">
  <h1 class="font-bold text-4xl"><%= t("products.edit.heading") %></h1>

  <%= render "products/shared/form", product: @product %>

  <div class="flex flex-wrap items-center gap-3">
    <%= button_to t("products.edit.delete"),
          @product,
          method: :delete,
          data: { turbo_confirm: t("products.edit.confirm_delete") },
          class: "btn-danger" %>

    <%= link_to t("products.edit.back"),
          products_path,
          class: "btn btn-primary inline-block" %>
  </div>
</div>
