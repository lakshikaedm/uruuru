<div class="w-full max-w-6xl mx-auto px-4">
  <%= render "shared/breadcrumbs", items: breadcrumb_items_for(@product) %>
  <%= render "products/shared/detail", product: @product %>

  <div class="mt-6 flex flex-wrap gap-2">
    <%= link_to "Edit", edit_product_path(@product), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
    <%= link_to "Back", products_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
    <%= button_to "Destroy", @product, method: :delete,
          class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium",
          data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
