<div class="w-full max-w-6xl mx-auto px-4">
  <% content_for :title, t("products.show.title", title: @product.title) %>

  <%= render "shared/breadcrumbs", items: breadcrumb_items_for(@product) %>
  <%= render "products/shared/detail", product: @product %>

  <% if user_signed_in? && current_user == @product.user %>
    <div class="mt-6 flex flex-wrap gap-2">
      <%= link_to t("products.show.edit"),
            edit_product_path(@product),
            class: "btn-secondary" %>
    </div>
  <% end %>
</div>
