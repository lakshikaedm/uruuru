<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <% if product.images.attached? %>
      <%= image_tag product.images.first.variant(resize_to_limit: [600, 600]).processed %>
    <% else %>
      <%= image_tag "placeholder.png", class: "w-48 h-48 object-cover rounded" %>
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= product.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= product.user_id %>
  </div>
</div>
