<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= pluralize(product.errors.count, "error") %>
        <%= t("products.form.error_header") %>
      </h2>

      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% base_field_classes = "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>

  <%# Title %>
  <div class="my-5">
    <%= form.label :title, t("products.form.title"), class: "form-label" %>
    <%= form.text_field :title,
          class: "#{base_field_classes} #{field_state_classes(product, :title)}" %>
  </div>

  <%# Images %>
  <div class="my-5">
    <%= form.label :images, t("products.form.images"), class: "form-label" %>
    <%= form.file_field :images,
          multiple: true,
          accept: "image/*",
          class: base_field_classes,
          direct_upload: true %>
    <p class="text-xs text-gray-500 mt-1">
      <%= t("products.form.images_hint") %>
    </p>
  </div>

  <%# Description %>
  <div class="mb-5">
    <%= form.label :description, t("products.form.description"), class: "form-label" %>
    <%= form.text_area :description,
          rows: 4,
          class: "#{base_field_classes} #{field_state_classes(product, :description)}" %>
  </div>

  <%# Price %>
  <div class="mb-5">
    <%= form.label :price, t("products.form.price"), class: "form-label" %>
    <%= form.text_field :price,
          class: "#{base_field_classes} #{field_state_classes(product, :price)}" %>
  </div>

  <%# Status %>
  <div class="mb-5">
    <%= form.label :status, t("products.form.status"), class: "form-label" %>
    <%= form.select :status,
          options_for_select(
            Product.statuses.keys.map { |k| [k.titleize, k] }, # can i18n later
            (product.status.presence || "draft")
          ),
          {},
          id: "product_status",
          class: "#{base_field_classes} #{field_state_classes(product, :status)}" %>
  </div>

  <%# Category %>
  <div class="mb-5">
    <%= form.label :category_id, t("products.form.category"), class: "form-label" %>
    <%= form.collection_select :category_id,
          Category.order(:name), :id, :name,
          { include_blank: t("products.form.category_placeholder") },
          class: base_field_classes %>
  </div>

  <%# Submit %>
  <div class="inline">
    <%= form.submit t("products.form.save"),
          class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
