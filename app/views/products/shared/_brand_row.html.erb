<section class="mt-4">
  <h2 class="text-sm font-semibold text-gray-800 mb-2">
    <%= t("products.index.brands") %>
  </h2>

  <% if top_brands.present? %>
    <div class="flex gap-2 overflow-x-auto pb-1 snap-x snap-mandatory">
      <% top_brands.each do |brand| %>
        <%= link_to brand_path(brand),
              class: "snap-start flex-shrink-0 w-1/3 md:w-1/6" do %>
          <div class="flex items-center justify-center rounded-full border text-xs md:text-sm px-3 py-2 bg-white hover:bg-gray-50 shadow-sm">
            <span class="truncate"><%= brand_label(brand) %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</section>
