<h1 class="text-2xl font-semibold mb-4"><%= @category.name %></h1>

<% if @products.any? %>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% @products.each do |p| %>
      <div class="border rounded-lg p-3">
        <%= image_tag p.image_url, class: "w-full h-40 object-cover mb-2" if p.image_url.present? %>
        <h2 class="font-medium"><%= link_to p.title, product_path(p) %></h2>
        <p class="text-sm text-gray-600">Â¥<%= number_with_delimiter(p.price) %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600">No products in this category yet.</p>
<% end %>
