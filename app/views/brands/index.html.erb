<% content_for :title, t("brands.index.title") %>

<h1 class="text-2xl font-semibold mb-4">
  <%= t("brands.index.heading") %>
</h1>

<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
  <% @brands.each do |brand| %>
    <div>
      <%= link_to brand_label(brand), brand_path(brand),
            class: "block rounded-lg border bg-white p-4 shadow-sm hover:shadow-md transition" %>
    </div>
  <% end %>
</div>
