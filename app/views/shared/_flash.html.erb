<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <% css =
    case type.to_sym
    when :notice
      "bg-emerald-50 border-emerald-200 text-emerald-800"
    when :alert, :error
      "bg-rose-50 border-rose-200 text-rose-800"
    else
      "bg-slate-50 border-slate-200 text-slate-800"
    end
  %>

  <div class="relative mb-4 rounded-xl border px-3 py-2 text-[12px] md:px-4 md:py-3 md:text-sm <%= css %>">
    <button
      type="button"
      class="absolute right-2 top-2 text-[14px] md:text-sm text-slate-600 hover:text-slate-800"
      onclick="this.parentElement.remove()">
      Ã—
    </button>
    <%= message %>
  </div>
<% end %>
