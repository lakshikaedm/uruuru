<div class="max-w-sm mx-auto pt-4 space-y-6"> 
  <h2 class="text-xl font-semibold">Edit Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-5">
      <%= f.label :email, "Email", class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.email_field :email,
        class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
         autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-5">
      <%= f.label :password, "Password", class: "block mb-2 text-sm font-medium text-gray-900" %> 
      <i class="block mb-2 text-xs font-medium text-gray-900">(leave blank if you don't want to change it)</i>
      <%= f.password_field :password,
          class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
           autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em class="block mb-2 text-xs font-medium text-gray-900"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-5">
      <%= f.label :password_confirmation, "Confirm Password", class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.password_field :password_confirmation, 
          class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
          autocomplete: "new-password" %>
    </div>

    <div class="mb-5">
      <%= f.label :current_password, "Current password", class: "block mb-2 text-sm font-medium text-gray-900" %> 
      <i class="block mb-2 text-xs font-medium text-gray-900">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, 
          class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5",
          autocomplete: "current-password" %>
    </div>

    <div class="mb-5">
      <%= f.submit "Update", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 mr-4" %>
    </div>
  <% end %>
  <%= link_to "Back to Home", root_path, class: "text-white bg-orange-500 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2" %>

  <div class= "text-base font-medium mb-4">
    <div class="flex items-center my-6">
      <div class="flex-grow border-t border-red-700"></div>
      <span class="mx-4 text-red-600 font-semibold">Danger Zone</span>
      <div class="flex-grow border-t border-red-700"></div>
    </div>
    <p>Deleting your account is permanent and cannot be undone.</p><br/>
    <%= button_to "Permanently Delete my account",
      registration_path(resource_name),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "text-white bg-red-500 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-blue-300
              font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5" %>
  </div>
</div>
