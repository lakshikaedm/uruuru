<div class="max-w-sm mx-auto pt-4 space-y-6">  
  <% content_for :title, t("devise.sessions.new.title") %>

  <%= form_for(resource,
               as: resource_name,
               url: session_path(resource_name),
               html: { class: "max-w-sm mx-auto pt-4 space-y-6" }) do |f| %>

    <h2 class="text-xl font-semibold"><%= t("devise.sessions.new.heading") %></h2>

    <%= render "shared/facebook_button", label: t("devise.sessions.new.facebook") %>

    <div class="my-6 flex items-center gap-3">
      <div class="flex-1 h-px bg-gray-400"></div>
      <span class="text-gray-600 text-sm"><%= t("devise.registrations.new.or") %></span>
      <div class="flex-1 h-px bg-gray-400"></div>
    </div>

    <div class="mb-5">
      <%= f.label :email,
                  t("devise.sessions.new.email"),
                  class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.email_field :email, 
            class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5", 
            placeholder: t("devise.sessions.new.email_placeholder"),
            autofocus: true,
            autocomplete: "email" %>
    </div>

    <div class="mb-5">
      <%= f.label :password,
                  t("devise.sessions.new.password"),
                  class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.password_field :password,
            autocomplete: "current-password",
            class: "bg-blue-50 border border-black-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-start mb-5">
        <div class="flex items-center h-5">
          <%= f.check_box :remember_me,
                class: "w-4 h-4 border border-gray-300 rounded-sm bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800" %>
          <%= f.label :remember_me,
                      t("devise.sessions.new.remember_me"),
                      class: "ms-2 text-sm font-medium text-gray-900" %>
        </div>
      </div>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="flex items-start mb-5">
        <div class="flex items-center h-5">
          <%= link_to t("devise.sessions.new.forgot_password"),
                      new_password_path(resource_name),
                      class: "text-sm font-medium text-blue-600 hover:underline" %>
        </div>
      </div>
    <% end %>
    
    <%= f.submit t("devise.sessions.new.submit"),
          class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5" %>
  <% end %>

  <div class="space-y-4 text-base font-medium mb-4">
    <p><%= t("devise.sessions.new.no_account") %></p>
    <%= button_to t("devise.sessions.new.sign_up"),
          new_user_registration_path,
          class: "text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5" %>
  </div>      
</div>
