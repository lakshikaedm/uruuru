<p><%= t("devise.mailer.email_changed.greeting", email: @email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p>
    <%= t(
      "devise.mailer.email_changed.being_changed",
      email: @resource.unconfirmed_email
    ) %>
  </p>
<% else %>
  <p>
    <%= t(
      "devise.mailer.email_changed.changed",
      email: @resource.email
    ) %>
  </p>
<% end %>
